{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "clipboard-manager:allow-write-image",
    "core:default",
    "core:window:allow-set-title",
    "core:window:allow-start-dragging",
    "opener:default",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "dialog:allow-message",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    "fs:allow-write-file",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-rename",
    "fs:allow-exists"
  ]
}