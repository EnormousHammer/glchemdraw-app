{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "functions": {
    "api/nmr-proxy.js": {
      "maxDuration": 60,
      "memory": 3008
    },
    "api/ocsr.js": {
      "maxDuration": 30
    },
    "api/cdxml-to-cdx.py": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {"source": "/api/nmr-proxy", "destination": "/api/nmr-proxy.js"},
    {"source": "/api/ocsr", "destination": "/api/ocsr.js"},
    {"source": "/api/cdxml-to-cdx", "destination": "/api/cdxml-to-cdx.py"},
    {"source": "/((?!api).*)", "destination": "/index.html"}
  ]
}
